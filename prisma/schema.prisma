generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Clip {
  id        String   @id @default(cuid())
  code      String   @unique @default("")
  content   String
  createdAt DateTime @default(now())
  expiresAt DateTime?
}
